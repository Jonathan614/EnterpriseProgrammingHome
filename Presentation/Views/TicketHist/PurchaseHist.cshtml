
@{
    ViewData["Title"] = "Ticket Purchase History";
}

<div class="container mt-5">
    <h1 class="display-4">Purchase History</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Row</th>
                <th>Column</th>
                <th>Flight Id</th>
                <th>Price Paid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.row</td>
                    <td>@ticket.column</td>
                    <td>@ticket.flightId</td>
                    <td>@ticket.pricePaid.ToString("C", new System.Globalization.CultureInfo("en-EU"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
