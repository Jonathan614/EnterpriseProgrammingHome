@model BusinessLogic.ViewModels.BookTicketViewModel

@{
    ViewData["Title"] = "Book Ticket";
}

<div class="container mt-5">
    <h1 class="display-4">Book Ticket</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <form method="post" asp-action="Book">

        <div class="form-group">
            <label asp-for="row">Row</label>
            <input asp-for="row" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="column">Column</label>
            <input asp-for="column" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="passport">Passport</label>
            <input asp-for="passport" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="pricePaid">Price</label>
            <input asp-for="pricePaid" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Book Ticket</button>
    </form>
</div>
