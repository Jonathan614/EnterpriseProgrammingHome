@model IEnumerable<BusinessLogic.ViewModels.TicketViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-5">
    <h1 class="display-4">Bookings for flight @ViewBag.flightId</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Row</th>
                <th>Column</th>
                <th>Price Paid</th>
                <th>Passport</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.row</td>
                    <td>@ticket.column</td>
                    <td>@ticket.pricePaid</td>
                    <td>@ticket.passport</td>
                    <td>
                       <a class="btn btn-info btn-sm" href="@Url.Action("TicketDetails", "Admin", new { ticketId = ticket.Id })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
